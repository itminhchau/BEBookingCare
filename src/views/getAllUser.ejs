<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.scss">
    <title>list User</title>
</head>

<body>
    <div class="wrap-conten">
        <table class="list-user">
            <thead>
                <tr>
                    <th>first Name</th>
                    <th>last Name</th>
                    <th>email</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% for(i=0 ; i< dataUsers.length ; i++) { %>
                    <tr>
                        <td>
                            <%=dataUsers[i].firstName %>
                        </td>
                        <td>
                            <%=dataUsers[i].lastName %>
                        </td>
                        <td>
                            <%=dataUsers[i].email %>
                        </td>

                        <td style="display: flex ;">
                            <button type="button">
                                <a href="/get/edit/user?id=<%=dataUsers[i].id %>">edit</a>
                            </button>
                            <form action="/get/delete/user?id=<%=dataUsers[i].id %>" method="post">
                                <button type="submit">
                                    delete
                                </button>
                            </form>

                        </td>

                    </tr>
                    <% }%>
            </tbody>
        </table>
    </div>
</body>

</html>